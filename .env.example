# ========================================
# FICHIER : .env.example
# ========================================
# Copier ce fichier en .env et remplir avec vos valeurs

# ========== CONFIGURATION GÉNÉRALE ==========
APP_ENV=development
DEBUG=true
APP_VERSION=2.0.0

# ========== API ==========
API_BASE_URL=https://api.schoolmasterplus.cm
GRAVBOT_API_URL=https://api.schoolmasterplus.cm/gravbot
API_TIMEOUT=30000

# ========== CLÉS API - OPENAI (GravBot) ==========
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# ========== CLÉS API - GOOGLE ==========
GOOGLE_VISION_API_KEY=your-google-vision-key-here
GOOGLE_SPEECH_API_KEY=your-google-speech-key-here
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# ========== PAIEMENTS - ORANGE MONEY ==========
ORANGE_CLIENT_ID=your-orange-client-id
ORANGE_CLIENT_SECRET=your-orange-client-secret
ORANGE_API_URL=https://api.orange.cm/payment
ORANGE_CALLBACK_URL=https://api.schoolmasterplus.cm/webhooks/orange-money

# ========== PAIEMENTS - MTN MONEY ==========
MTN_CLIENT_ID=your-mtn-client-id
MTN_CLIENT_SECRET=your-mtn-client-secret
MTN_API_URL=https://api.mtn.cm/payment
MTN_CALLBACK_URL=https://api.schoolmasterplus.cm/webhooks/mtn-money

# ========== FIREBASE (NOTIFICATIONS PUSH) ==========
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id

# ========== BASE DE DONNÉES - POSTGRESQL ==========
DB_HOST=localhost
DB_PORT=5432
DB_NAME=schoolmasterplus
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_SSL=false

# ========== REDIS (CACHE) ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========== STOCKAGE CLOUD - AWS S3 ==========
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=schoolmasterplus-bucket
AWS_S3_URL=https://schoolmasterplus-bucket.s3.amazonaws.com

# ========== EMAIL - SENDGRID ==========
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@schoolmasterplus.cm
SENDGRID_FROM_NAME=SchoolMasterPlus

# ========== SMS - TWILIO ==========
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========== SENTRY (ERROR TRACKING) ==========
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# ========== JWT ==========
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=30d

# ========== CONFIGURATION NOTIFICATIONS ==========
NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false

# ========== CONFIGURATION GAMIFICATION ==========
GAMIFICATION_ENABLED=true
POINTS_MULTIPLIER=1
BADGES_ENABLED=true
LEADERBOARD_ENABLED=true

# ========== CONFIGURATION OFFLINE ==========
OFFLINE_MODE_ENABLED=true
OFFLINE_CACHE_SIZE=5242880
OFFLINE_SYNC_INTERVAL=300000

# ========== CONFIGURATION SÉCURITÉ ==========
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000
CORS_ENABLED=true
CORS_ORIGIN=*

# ========== CONFIGURATION DÉVELOPPEMENT ==========
LOG_LEVEL=debug
MOCK_PAYMENTS=false
MOCK_AI=false
MOCK_NOTIFICATIONS=false

# ========== CONFIGURATION PRODUCTION ==========
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=error
# MOCK_PAYMENTS=false
# MOCK_AI=false
# MOCK_NOTIFICATIONS=false

# ========== AUTRES ==========
TIMEZONE=Africa/Douala
LANGUAGE=fr
CURRENCY=FCFA
COUNTRY_CODE=CM
